{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fdc3.finos.org/schemas/next/intent.schema.json",
  "type": "object",
  "title": "Intent",
  "properties": {
    "title": {
      "type": "string"
    },
    "intent": {
      "type": "string",
      "enum": [
        "StartCall",
        "StartChat",
        "StartEmail",
        "ViewChart",
        "ViewContact",
        "ViewQuote",
        "ViewNews",
        "ViewInstrument",
        "ViewAnalysis",
        "ViewHoldings",
        "ViewProfile",
        "ViewResearch",
        "ViewInteractions",
        "ViewOrders"
      ]
    },
    "context": {
      "type": "object",
      "$ref": "context.schema.json#"
    },
    "customConfig": {
      "type": "object"
    }
  },
  "required": [
    "title", "intent", "context"
  ]
}
